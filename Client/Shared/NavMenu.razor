@using Microsoft.AspNetCore.Components.WebAssembly.Hosting
@inject IWebAssemblyHostEnvironment HostEnvironment

<CascadingAuthenticationState>
    <MudNavMenu>
        <MudNavLink Href="/" Match="NavLinkMatch.All">Perfil</MudNavLink>
            <MudNavLink Href="/contacts" Match="NavLinkMatch.Prefix">Contactos</MudNavLink>
            <MudNavGroup Title="Settings" Expanded="true">
                <MudNavLink Href="/settings"  Match="NavLinkMatch.Prefix">Preferencias</MudNavLink>
                <MudNavLink Href="/security"  Match="NavLinkMatch.Prefix">Security</MudNavLink>
            </MudNavGroup>
        <MudNavLink  Href="/about"  Match="NavLinkMatch.Prefix">Acerca de la aplicacion</MudNavLink>
        <MudNavLink Disabled Match="NavLinkMatch.Prefix">
            
            @if(@HostEnvironment.Environment.Equals("Development"))
            {
                @HostEnvironment.Environment
            } 
        </MudNavLink>   
    </MudNavMenu>    
</CascadingAuthenticationState>



@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
